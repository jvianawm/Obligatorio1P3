@model PresentacionMVC.Models.ConsultaEspecieViewModel

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EspeciesEnPeligro.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EspeciesEnPeligro.First().NombreCientifico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EspeciesEnPeligro.First().NombreVulgar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EspeciesEnPeligro.First().Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EspeciesEnPeligro.First().RangoPeso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EspeciesEnPeligro.First().RangoLongitud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EspeciesEnPeligro.First().ArchivoImagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EspeciesEnPeligro)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCientifico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreVulgar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RangoPeso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RangoLongitud)
                </td>
                <td>
                    <img src="/@Model.RutaDirectorioImagenesEspecies/@item.ArchivoImagen" height="30">
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |

                </td>
            </tr>
        }
    </tbody>
</table>