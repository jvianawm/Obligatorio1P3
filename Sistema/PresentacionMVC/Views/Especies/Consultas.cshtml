@model PresentacionMVC.Models.ConsultaEspecieViewModel

@{
    ViewData["Title"] = "Consuta";
}

<h1>Consuta</h1>

<div id="tabs">

    <ul>
        <li><a href="#tabs-1">Todas las especies</a></li>
        <li><a href="#tabs-2">Por nombre científico</a></li>
        <li><a href="#tabs-3">En peligro de extinción</a></li>
        <li><a href="#tabs-4">Por rango de peso</a></li>
        <li><a href="#tabs-5">Por ecosistema</a></li>
        <li><a href="#tabs-6">No puede habitar</a></li>                
    </ul>

    <!-- Todas las especies -->
    <div id="tabs-1">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Especies.First().Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Especies.First().NombreCientifico)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Especies.First().NombreVulgar)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Especies.First().Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Especies.First().RangoPeso)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Especies.First().RangoLongitud)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Especies.First().ArchivoImagen)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Especies)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreCientifico)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreVulgar)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RangoPeso)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RangoLongitud)
                        </td>
                        <td>
                            <img src="/@Model.RutaDirectorioImagenesEspecies/@item.ArchivoImagen" height="30">
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id=item.Id }) |

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

    <!-- Por nombre científico -->
    <div id="tabs-2">
        <select name="IdEspecieSeleccionada">

            @foreach (LogicaNegocio.Dominio.Especie especie in Model.Especies)
            {
                if (Model.Especies != null
                && Model.IdEspecieSeleccionada == especie.Id)
                {
                    <option selected value="@especie.Id">@especie.NombreCientifico (@especie.NombreVulgar)</option>
                }
                else
                {
                    <option value="@especie.Id">@especie.NombreCientifico (@especie.NombreVulgar)</option>
                }
            }
        </select>


        <input type="submit" value="Buscar" class="btn btn-primary" />
  
    </div>

    <!-- En peligro de extinción -->
    <div id="tabs-3">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Especies.First().Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Especies.First().NombreCientifico)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Especies.First().NombreVulgar)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Especies.First().Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Especies.First().RangoPeso)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Especies.First().RangoLongitud)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Especies.First().ArchivoImagen)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Especies)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreCientifico)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreVulgar)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RangoPeso)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RangoLongitud)
                        </td>
                        <td>
                            <img src="/@Model.RutaDirectorioImagenesEspecies/@item.ArchivoImagen" height="30">
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id=item.Id }) |

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Por rango de peso -->
    <div id="tabs-4">
        <!-- Nombre Científico -->
        <div class="form-group">
            <label asp-for="Especies.First().NombreCientifico" class="control-label"></label>
            <input asp-for="Especies.First().NombreCientifico" class="form-control" />
            <span asp-validation-for="Especies.First().NombreCientifico" class="text-danger"></span>
        </div>

        <!-- Nombre Vulgar -->
        <div class="form-group">
            <label asp-for="Especies.First().NombreCientifico" class="control-label"></label>
            <input asp-for="Especies.First().NombreCientifico" class="form-control" />
            <span asp-validation-for="Especies.First().NombreCientifico" class="text-danger"></span>
        </div>

        <!-- Botón crear -->
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>

    <!-- Por ecosistema -->
    <div id="tabs-5">
        Content for Tab 5 goes here.<br />
        Lorem ipsum dolor sit amet, consectetuer adipiscing elit,
        sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.
    </div>

    <!-- No puede habitar -->
    <div id="tabs-6">
        Content for Tab 6 goes here.<br />
        Lorem ipsum dolor sit amet, consectetuer adipiscing elit,
        sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.
    </div>

</div>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.9/jquery-ui.js" type="text/javascript"></script>
<link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.9/themes/start/jquery-ui.css" rel="stylesheet" type="text/css" />

<script type="text/javascript">
    $(function () {
        $("#tabs").tabs();
    });
</script>

